---
import Breadcrumbs from "../components/breadcrumbs.astro";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Ophelia's Flowers â€” Dahlia tubers for the passionate gardener.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <title>{title} | Ophelia's Flowers</title>
  </head>
  <body>
    <slot name="header">
      <header
        class="border-b border-ink px-4 sm:px-8 lg:px-12 py-6"
      >
        <div class="flex items-center justify-between">
          <a href="/" class="no-underline">
            <span class="font-serif text-2xl lg:text-3xl tracking-tight">
              Ophelia's Flowers
            </span>
          </a>

          <!-- Mobile menu button -->
          <button
            id="mobile-menu-toggle"
            type="button"
            class="sm:hidden border border-ink p-2 hover:bg-ink hover:text-white transition-colors"
            aria-expanded="false"
            aria-controls="main-nav"
            aria-label="Open menu"
          >
            <svg id="menu-icon-open" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="square" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg id="menu-icon-close" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="square" stroke-width="2" d="M6 6l12 12M6 18L18 6" />
            </svg>
          </button>

          <!-- Desktop nav -->
          <nav aria-label="Main navigation" class="hidden sm:block">
            <ul class="flex gap-6 text-xs uppercase tracking-widest items-center">
              <li>
                <a
                  href="/varieties"
                  class="no-underline hover:text-stone-500 transition-colors"
                  >Shop</a
                >
              </li>
              <li>
                <a
                  href="/about"
                  class="no-underline hover:text-stone-500 transition-colors"
                  >About</a
                >
              </li>
              <li>
                <a
                  href="/cart"
                  class="inline-flex items-center gap-2 no-underline hover:text-stone-500 transition-colors"
                >
                  <span>Cart</span>
                  <span
                    id="cart-count"
                    class="text-xs"
                    hidden>(0)</span
                  >
                </a>
              </li>
            </ul>
          </nav>
        </div>

        <!-- Mobile nav -->
        <nav
          id="main-nav"
          class="hidden sm:hidden border-t border-stone-300 mt-6 pt-6"
          aria-label="Main navigation"
        >
          <ul class="flex flex-col gap-4 text-xs uppercase tracking-widest">
            <li>
              <a
                href="/varieties"
                class="no-underline hover:text-stone-500 transition-colors"
                >Shop</a
              >
            </li>
            <li>
              <a
                href="/about"
                class="no-underline hover:text-stone-500 transition-colors"
                >About</a
              >
            </li>
            <li>
              <a
                href="/cart"
                class="inline-flex items-center gap-2 no-underline hover:text-stone-500 transition-colors"
              >
                <span>Cart</span>
                <span
                  id="cart-count-mobile"
                  class="text-xs"
                  hidden>(0)</span
                >
              </a>
            </li>
          </ul>
        </nav>
      </header>
    </slot>

    <Breadcrumbs />

    <main class="flex-1">
      <slot />
    </main>

    <footer
      class="border-t border-ink px-4 sm:px-8 lg:px-12 py-10 sm:py-14 lg:py-16 mt-auto"
    >
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl"
      >
        <div>
          <p class="font-serif text-lg mb-3">Ophelia's Flowers</p>
          <p class="text-sm text-stone-500 leading-relaxed">
            Small-batch dahlia tubers grown with care for the passionate
            gardener.
          </p>
        </div>
        <div>
          <p class="text-xs uppercase tracking-widest font-semibold mb-3">
            Quick Links
          </p>
          <ul class="space-y-2 text-sm text-stone-500">
            <li>
              <a
                href="/varieties"
                class="no-underline hover:text-ink transition-colors"
                >Shop All Varieties</a
              >
            </li>
            <li>
              <a
                href="/about"
                class="no-underline hover:text-ink transition-colors"
                >About Us</a
              >
            </li>
            <li>
              <a
                href="/cart"
                class="no-underline hover:text-ink transition-colors">Cart</a
              >
            </li>
          </ul>
        </div>
        <div>
          <p class="text-xs uppercase tracking-widest font-semibold mb-3">
            Get in Touch
          </p>
          <ul class="space-y-2 text-sm text-stone-500">
            <li>
              <a
                href="mailto:hello@opheliasflowers.ca"
                class="no-underline hover:text-ink transition-colors"
                >hello@opheliasflowers.ca</a
              >
            </li>
            <li>Chilliwack, BC Canada</li>
          </ul>
        </div>
      </div>
      <div class="border-t border-stone-300 mt-10 pt-6 text-xs text-stone-500">
        <p>
          &copy; {new Date().getFullYear()} Ophelia's Flowers. All rights reserved.
        </p>
      </div>
    </footer>

    <script>
      import { loadCart, getCartItemCount } from "../lib/commerce/cart";

      // Cart count badges
      const cartCount = document.getElementById("cart-count");
      const cartCountMobile = document.getElementById("cart-count-mobile");
      const cart = loadCart();
      const count = getCartItemCount(cart);
      if (count > 0) {
        [cartCount, cartCountMobile].forEach((el) => {
          if (el) {
            el.textContent = `(${count})`;
            el.hidden = false;
          }
        });
      }

      // Mobile menu toggle
      const toggle = document.getElementById("mobile-menu-toggle");
      const mobileNav = document.getElementById("main-nav");
      const iconOpen = document.getElementById("menu-icon-open");
      const iconClose = document.getElementById("menu-icon-close");

      if (toggle && mobileNav && iconOpen && iconClose) {
        toggle.addEventListener("click", () => {
          const isOpen = toggle.getAttribute("aria-expanded") === "true";
          toggle.setAttribute("aria-expanded", String(!isOpen));
          toggle.setAttribute("aria-label", isOpen ? "Open menu" : "Close menu");
          mobileNav.classList.toggle("hidden");
          iconOpen.classList.toggle("hidden");
          iconClose.classList.toggle("hidden");
        });
      }
    </script>
  </body>
</html>
